<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <form action="/signup" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="emailAddress">Email Address</label>
                <input id="emailAddress" name="emailAddress" type="email" class="form-control" required></input>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div>Your password must be at least 8 characters long and contain at least 1 number and 1 letter.</div>
                <input id="password" name="password" type="password" class="form-control" required pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$"></input>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" required></input>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
            {{#if errorMessage}}
                <div class="alert alert-danger">
                    {{errorMessage}}
                </div>
            {{/if}}

            <div id="localError" hidden="true" class="form-group alert alert-danger">
            </div>
        </form>
    </div>
</div> <!-- /container -->

<script src="/js/signup.js" type="text/javascript"></script>