<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="emailAddress">Email Address</label>
                <input name="emailAddress" type="email" class="form-control" required></input>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" required></input>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input name="confirmPassword" type="password" class="form-control" required></input>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div> <!-- /container -->
