<link href="/css/home.css" rel="stylesheet">

<div class="container">
    <div class="jumbotron">
        <h1>Students</h1>
        {{#if hasStudents}}
        {{else}}
        {{/if}}
        <table class="table table-striped table-bordered">
            <thead>
                <th scope="col">Email Address</th>
                <th scope="col">Number Of Quizzes Attempted</th>
                <th scope="col">Last Quiz Finished On</th>
                <th scope="col">Most Recent Result</th>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{emailAddress}}</td>
                        <td>{{numQuizzes}}</td>
                        <td>{{mostRecentQuizFinishedDate}}</td>
                        <td>{{mostRecentResult}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div> <!-- /container -->
