<link href="/css/home.css" rel="stylesheet">

<div class="container">
    <div class="jumbotron col-md-offset-2 col-md-8">
        <h1 class="settings-heading">Settings</h1>
        <form action="/tutor/settings" method="POST">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="allowUserToSeeResultBreakdown" {{#if settings.allowUserToSeeResultBreakdown}}
                        checked
                    {{/if}}
                >

                <label class="form-check-label">
                    Allow users to view their result breakdown
                </label>
            </div>
            <div class="form-group right">
                <button class="btn btn-primary btn-lg">Save</button>
            </div>
        </form>
    </div>
</div>